            <!--android:hint="@string/enter_waybill_code"-->
            <!--app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.099"-->
            <!--app:layout_constraintVertical_bias="1.0"/>-->
